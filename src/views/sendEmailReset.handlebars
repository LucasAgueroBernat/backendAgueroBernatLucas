<h2>Restaurar contrase침a</h2>
<div class="star-wars-form">
    <form id="SendEmailForm">
        <label>Ingresa tu cuenta de correo electr칩nico</label>
        <input name="email" placeholder="correo@example.com">
        <input type="submit" value="Enviar" class="submit-btn">
    </form>
</div>

<script>
    const form = document.getElementById('SendEmailForm');

    form.addEventListener('submit', e => {
        e.preventDefault();
        const data = new FormData(form);
        const obj = {};

        data.forEach((value, key) => obj[key] = value);
        fetch('/api/logic-reset', {
            method: 'POST',
            body: JSON.stringify(obj),
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(result => {
            if (result.status === 200) {
                console.log('Solicitud de restablecimiento de contrase침a enviada correctamente');
                window.location.replace('/login');
            } else if (result.status === 401) {
                console.log('Credenciales no v치lidas');
            } else {
                console.log('Error en el servidor:', result.status);
            }
        }).catch(error => {
            console.error('Error en la llamada a fetch:', error);
        });
    });
</script>

